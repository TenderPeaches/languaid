<%= form_with(model: language) do |form| %>
  <%= render "common/form_errors", model: language %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :shorthand, style: "display: block" %>
    <%= form.text_field :shorthand %>
  </div>

  <div>
    <%= form.label :active, style: "display: block" %>
    <%= form.check_box :active %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
