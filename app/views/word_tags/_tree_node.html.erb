<%= content_tag :div, class: "tree-node" do %>
    <% depth.times do |i| %>
        <%= content_tag :div, class: "tree-spacing" do %>
        <% end %>
    <% end %>
    <%= link_to parent.tag, edit_word_tag_path(parent.id) %>
    <% parent.children.each do |child| %>
        <%= render partial: "word_tags/tree_node", locals: { parent: child, depth: depth + 1, form: form } %>
    <% end %>
<% end %>