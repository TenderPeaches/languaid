<%= content_tag :table, class: "table", data: { controller: "clickable-list" } do %>
    <%= content_tag :tr do %>
        <%= content_tag :th do %>
            ID
        <% end %>
        <%= content_tag :th do %>
            Nom
        <% end %>
        <%= content_tag :th do %>
            Mots
        <% end %>
    <% end %>
    <% @word_tags.each do |tag| %>
        <%= content_tag :tr, class: "clickable-row", data: { id: tag.id.to_s, url: word_tag_path(tag.id.to_s) } do %>
            <%= content_tag :td do %>
                <%= tag.id %>
            <% end %>
            <%= content_tag :td do %>
                <%= tag.tag %>
            <% end %>
            <%= content_tag :td do %>
                <%= tag.word_count %>
            <% end %>
        <% end %>
    <% end %>
<% end %>