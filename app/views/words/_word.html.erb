<%= content_tag :div, class: "card card--word" do %>
  <%= content_tag :div, class: "card-title" do %>
    <%= word_definition.wordable_type %> - <%= word_definition.definition == "" ? word_definition.id : word_definition.defintion %>
  <% end %>
  <br/>
  <%= content_tag :div, class: "card-list" do %>
    <% Language.active.each do |lang| %>
      <%= content_tag :div do %>
        <%= lang.name %> - <%= word_definition.loc(lang) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
